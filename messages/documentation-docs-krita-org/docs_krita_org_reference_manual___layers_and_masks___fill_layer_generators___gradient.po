#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:17
msgid "Gradient Fill"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:21
msgid "Fills the layer with a gradient in the same way as the gradient tool does."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:24
msgid "General Options"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:28
msgid "This will draw a straight gradient. The distance and angle between the start and end points will define the size and rotation of the gradient, respectively."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:34
msgid "Linear"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:34
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:43
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:51
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:59
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:67
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:75
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:83
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:92
msgid "Left: **None**. Middle: **Forwards**. Right: **Alternating**."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:37
msgid "This will draw a straight gradient, mirrored along the axis. The distance and angle between the start and end points will define the size and rotation of the gradient, respectively."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:43
msgid "Bilinear"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:46
msgid "This will draw the gradient from a center, defined by the start point, with a radius equal to the distance between the start and end points."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:51
msgid "Radial"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:54
msgid "This will draw the gradient from a center in a square shape, defined by the start point. The distance and angle between the start and end points will define the distance from that center to a side of the square and its rotation, respectively."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:59
msgid "Square"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:62
msgid "This will wrap the gradient around a center, defined by the start point. The angle between the start and end points will define where the gradient starts."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:67
msgid "Conical"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:70
msgid "This will wrap the gradient around a center, defined by the start point, but will mirror the wrap once. The angle between the start and end points will define where the gradient starts."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:75
msgid "Conical-symmetric"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:78
msgid "This will draw the gradient spiral from a center, defined by the start point. The distance and angle between the start and end points will define the distance between loops and the rotation of the spiral, respectively."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:83
msgid "Spiral"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:86
msgid "This will draw the gradient spiral from a center, defined by the start point, but direction is flipped perpendicular to the line that passes through the star and end points. The distance and angle between the start and end points will define the distance between loops and the rotation of the spiral, respectively."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:92
msgid "Reverse Spiral"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:95
msgid "This will shape the gradient depending on the image bounds."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:97
msgid "Shape:"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:97
msgid "Shaped"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:100
msgid "None"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:101
msgid "This will extend the gradient into infinity."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:102
msgid "Forward"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:103
msgid "This will repeat the gradient into one direction."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:105
msgid "Repeat:"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:105
msgid "Alternating"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:105
msgid "This will repeat the gradient, alternating the normal direction and the reversed."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:108
msgid "Reverse"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:108
msgid "Reverses the direction of the gradient."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:111
msgid "Controls how smooth is the border between repetitions."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:113
msgid "A value equal to 0 means there is no smoothing. The border is aliased."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:114
msgid "A value greater than 0 tells Krita how many pixels to each side of the border should be smoothed."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:118
msgid "Antialias threshold"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:118
msgid "Left: **0**. Middle: **0.5**. Right: **1**."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:121
msgid "Positioning Options"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:124
msgid "Start"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:124
msgid "Allows you to set the start point for the gradient (in the gradient tool this is the point where you first click)."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:127
msgid "End"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:127
msgid "Allows you to set the endpoint for the gradient (in the gradient tool this is the point where you release the mouse button after dragging)."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:130
msgid "You can make the values set for the start and end points mean different things by changing the units associated with them:"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:132
msgid "Pixels"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:133
msgid "The value indicates a distance in pixels."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:135
msgid "The value indicates a distance as a percentage of the width of the image. So for example, if the image is 1000 pixels wide and 500 pixels high, and the value is 25, then this would be translated to pixels as 250 (25% of the width)."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:136
msgid "Percent of the width"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:139
msgid "The value indicates a distance as a percentage of the height of the image. So for example, if the image is 1000 pixels wide and 500 pixels high, and the value is 25, then this would be translated to pixels as 125 (25% of the height)."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:140
msgid "Percent of the height"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:143
msgid "The value indicates a distance as a percentage of the shortest side of the image. So for example, if the image is 1000 pixels wide and 500 pixels high, and the value is 25, then this would be translated to pixels as 125 (25% of the shortest side)."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:144
msgid "Percent of the shortest side"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:147
msgid "The value indicates a distance as a percentage of the longest side of the image. So for example, if the image is 1000 pixels wide and 500 pixels high, and the value is 25, then this would be translated to pixels as 250 (25% of the longest side)."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:149
msgid "Percent of the longest side"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:151
msgid "Values that have percentage units are useful when changing the image size. For example, if you want to have a linear gradient that always goes from the left to the right of the image, you can set the start point to (x = 0 pixels, y = 0 pixels) and the end point to (x = 100% of the width, y = 0 pixels)."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:155
msgid "On the other hand, if you want a gradient to have the same size regardless of the image size, you should use pixel units."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:159
msgid "To make a gradient like the one in the image above, you can set the start position's X coordinate to 80 pixels, 25% of the width, or 25% of the longest side, and its Y coordinate to 60 pixels, 25% of the height, or 25% of the shortest side. Likewise, you could set the end position's X coordinate to 240 pixels, 75% of the width, or 75% of the longest side, and its Y coordinate to 180 pixels, 75% of the height, or 75% of the shortest side."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:166
msgid "Keep in mind that if you use percentages the gradient's start and end positions will adapt to the size of the image, while using pixel units will make the gradient's positions be static."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:167
msgid "Units"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:170
msgid "You can choose if the end point's coordinates are relative to the start point."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:172
msgid "Absolute"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:173
msgid "The end coordinate indicates a distance from the top-left corner of the image."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:175
msgid "Positioning"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:175
msgid "Relative"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:175
msgid "The end coordinate indicates a distance from the start point."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:178
msgid "You can set the end point in cartesian or polar coordinates."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:181
msgid "Cartesian"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:181
msgid "The coordinates of the end point are set by establishing horizontal and vertical distances relative to the top-left corner of the image or to the start point."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:184
msgid "The coordinates of the end point are set by establishing an angle and a distance relative to the start point."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:185
msgid "Polar"
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:189
msgid "To set the end point's position in the gradient on the image above, you could use cartesian coordinates and set the X and Y coordinates relative to the top-left corner of the image (absolute positioning) or relative to the start point (relative positioning)."
msgstr ""

#. +> trunk5
#: ../../reference_manual/layers_and_masks/fill_layer_generators/gradient.rst:193
msgid "However, in some cases it is more convenient using polar coordinates and setting the end point's position by establishing an angle and a distance relative to the start point (polar coordinates are always relative to the start point's position)."
msgstr ""

